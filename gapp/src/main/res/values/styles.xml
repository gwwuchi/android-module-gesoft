    <!--用户名-->
    <style name="g_et_name">
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:inputType">text</item>
    </style>

    <!--密码-->
    <style name="g_et_pwd">
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!--TextView 红边框-->
    <style name="g_tv_border_red">
        <item name="android:background">@drawable/g_border_radius_red</item>
        <item name="android:textColor">@color/g_bg_red</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!--TextView 蓝边框-->
    <style name="g_tv_border_blue">
        <item name="android:background">@drawable/g_border_radius_blue</item>
        <item name="android:textColor">@color/g_bg_blue</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!--TextView 灰边框-->
    <style name="g_tv_border_gray">
        <item name="android:background">@drawable/g_border_radius_gray</item>
        <item name="android:textColor">@color/g_gray_normal</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="g_radio_label_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="g_radio_blue" parent="g_radio_label_base">
        <item name="android:background">@drawable/g_radio_blue</item>
        <item name="android:textColor">@color/xml_radio_blue</item>
    </style>

    <style name="g_radio_red" parent="g_radio_label_base">
        <item name="android:background">@drawable/g_radio_red</item>
        <item name="android:textColor">@color/xml_radio_red</item>
    </style>

</resources>
