<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gesoft.gbmap.test" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="22" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
